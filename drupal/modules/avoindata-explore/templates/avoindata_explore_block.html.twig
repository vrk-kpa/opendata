{#
/**
 * @file
 * Avoindata Explore Block
 *
 * @ingroup themeable
 */
#}
<div class="avoindata-explore pb-4">
  <div class="avoindata-explore-container justify-content-center">
    <div class="row avoindata-explore-header-row pt-3"> 
      <h2>
        {% trans %}
          Explore open data and its use cases
        {% endtrans %}
      </h2>
    </div>

    <div class="avoindata-explore-items mt-3 mb-3">

      <div class="avoindata-explore-card mt-2">
        <div class="avoindata-explore-card-icon avoindata-explore-dataset">
          <img src="/themes/avoindata/images/database.svg"/>
        </div>

        <div class="avoindata-explore-card-content">
          <div class="avoindata-explore-card-title">
            <h3>
              {% trans %}
                Datasets
              {% endtrans %}
            </h3>
          </div>

          <div class="avoindata-explore-card-text">
            <i class="far fa-chevron-right"></i> 
            <a href="/data/{{ language }}/dataset">
              {% trans %}
               Browse datasets
              {% endtrans %}
            </a>
          </div>
        </div>

      </div>

      <div class="avoindata-explore-card mt-2">
        <div class="avoindata-explore-card-icon avoindata-explore-apiset">
          <img src="/themes/avoindata/images/exchange.svg"/>
        </div>

        <div class="avoindata-explore-card-content">
          <div class="avoindata-explore-card-title">
            <h3>
              {% trans %}
                APIs
              {% endtrans %}
            </h3>
          </div>

          <div class="avoindata-explore-card-text">
            <i class="far fa-chevron-right"></i> 
            <a href="/data/{{ language }}/apiset">
              {% trans %}
               Browse apis
              {% endtrans %}
            </a>
          </div>
        </div>

      </div>

      <div class="avoindata-explore-card mt-2">
        <div class="avoindata-explore-card-icon avoindata-explore-showcase">
          <img src="/themes/avoindata/images/meter.svg"/>
        </div>

        <div class="avoindata-explore-card-content">
          <div class="avoindata-explore-card-title">
            <h3>
              {% trans %}
                Apps
              {% endtrans %}
            </h3>
          </div>

          <div class="avoindata-explore-card-text">
            <i class="far fa-chevron-right"></i> 
            <a href="/data/{{ language }}/showcase">
              {% trans %}
                Browse apps
              {% endtrans %}
            </a>
          </div>
        </div>

      </div>



    </div>    

  </div>
</div>
