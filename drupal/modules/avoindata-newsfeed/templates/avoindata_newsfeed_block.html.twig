{#
/**
 * @file
 * Avoindata News Feed Block
 *
 * @ingroup themeable
 */
#}


<div class="avoindata-newsfeed">
  <div class="avoindata-newsfeed-container justify-content-center">

    <div class="row avoindata-newsfeed-header-row">
        <h2>
          {% trans %}
            News
          {% endtrans %}
        </h2>
    </div>

    {# <div class="avoindata-newsfeed-items row d-flex flex-row justify-content-center">     #}
    <div class="avoindata-newsfeed-items container">    
      <div class="row">

        {% for news in articles %}

          <div class="avoindata-newsfeed-item col-md-3">
            <div class="row">

              <div class="avoindata-newsfeed-line h-100 mr-2">
              </div> 

              <div class="row">
                <p>Julkaistu {{ news.createdtime | date('d.m.Y')}}</p>
                <a href={{ path('entity.node.canonical', {'node': news.id}) }} class="mt-2">
                {{ news.label }}
                </a>

                <div class="row mt-3">
                  {% for tag in news.tags %}
                    <div class="avoindata-newsfeed-tag mr-2 mt-2">
                        {{tag.name}}
                    </div>
                  {% endfor%}
                </div>
              </div>
            </div>
          </div>
            
        {% endfor %}
      </div>
    </div>

    <div class="avoindata-feed-button-wrapper container-fluid d-flex justify-content-center pt-3 pb-5">
      <div class="avoindata-newsfeed-link container-fluid d-flex align-items-center">
        <i class="far fa-chevron-right"></i>
        <a href="/{{language}}/articles" class="">
        {% trans %}
          All News
        {% endtrans %}
        </a>
      </div>
        
    </div>


  </div>

  
</div>
